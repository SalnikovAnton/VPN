# -*- mode: ruby -*-
# vi: set ft=ruby :
Vagrant.configure(2) do |config|
 config.vm.box = "centos/stream8"
 config.vm.define "serverras" do |server|
 server.vm.hostname = "serverras.loc"
 server.vm.network "private_network", ip: "192.168.56.10"
 config.vm.provision "ansible" do |ansible|
        ansible.playbook = "serverras.yml"
      end
 end
 config.vm.define "clientras" do |client|
 client.vm.hostname = "clientras.loc"
 client.vm.network "private_network", ip: "192.168.56.20"
 config.vm.provision "ansible" do |ansible|
        ansible.playbook = "clientras.yml"
     end
 end
end
